<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{blogUser.username}} on {{format_date date_created}}</p>

  <section class="text-center">
    {{#each comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>

  <p>
    <button class="btn btn-primary" id="comment">
      <a href="/comments/">Comment</a>
    </button>
  </p>
</div>